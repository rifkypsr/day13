<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/assests/img/logo/logo.png" style="height: 80px;" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/myproject">Add Project</a>
                </li>
            </ul>
        <a href="/contact"><button class="btn btn-dark" type="submit">Contact Me</button></a>
            </div>
    </div>
</nav>

    <div class="container my-5">
  <h1 class="text-center mb-4">Add Project</h1>
  <div class="row">
    {{#each projects}}
      <div class="col-md-4 mb-4">
        <div class="card project-card">
          <img src="src/assests/img/foto.webp" class="card-img-top" alt="Project Image"/>
          <div class="card-body">
            <h5 class="card-title">
              <a href="/myProject/{{this.id}}" class="btn btn-link project-title">{{this.inputProjectName}}</a>
            </h5>
            <p class="card-text">
              <small class="text-muted">Start Date: {{this.startDate}} - End Date: {{this.endDate}}</small>
            </p>
            <p class="card-text">{{this.inputDescription}}</p>
            <p class="card-text">Technologies:
              {{#each this.technologies}}
                <span class="badge bg-secondary">{{this}}</span>
              {{/each}}
            </p>
            <div class="d-flex justify-content-between">
              <a href="/updateProject/{{this.id}}" class="btn btn-warning">Update</a>
              <form action="/delete-project/{{this.id}}" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="text-center mt-4">
    <a href="/addProject" class="btn btn-danger">Add New Project</a>
  </div>
</div>

    <script src="assests/js/myproject.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>